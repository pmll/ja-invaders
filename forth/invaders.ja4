decimal

: copy-bytes ( from address, to address, length --)
    0 do
        over i + @
        over i + !
    2 +loop
    drop drop
;

: copy-to-udg ( copy from address, first char num, number of chars)
    swap 8 * 11264 +
    swap 8 *
    copy-bytes
;

: create-udgs ( user defined graphics for the game)
    player-graphics player-gr 16 copy-to-udg
    missile-graphics missile-gr 8 copy-to-udg
    invader-graphics invader-gr 8 copy-to-udg 
;

: between? ( a,b,c -- is a between b and c inclusive? )
    3 pick < if
        drop drop 0
    else
        < 0=
    then
;

: move-ship ( process keyboard input and update player)
    ship-x @ old-ship-x !
    65278 in 4 and 0= if    ( left key pressed)
        ship-x @ dup 0> if
            1- ship-x !
        else
            drop
        then
    then
    65278 in 8 and 0= if    ( right key pressed)
        ship-x @ dup 247 < if
            1+ ship-x !
        else
            drop
        then
    then
;

: move-missile
    missile-y @
    dup 0> if
        ( move the missile up the screen)
        1- missile-y !
    else
        drop
        32766 in 1 and 0= if    ( fire key pressed)
            [ ship-y 1- ] literal missile-y !
            ship-x @ 4 + missile-x !
        then
    then
;

: move-down
    inv-y @ 1+ inv-y !
    inv-dir @ -1 * inv-dir !
;

: set-inv-period
    ( invaders-left @ 4 / 2+ inv-period ! )
    20 inv-period !  ( temp setting to make testing easier )
;

: move-invaders
    inv-x @ old-inv-x !
    inv-y @ old-inv-y !
    inv-dir @
    1 =
    if
        ( moving right...)
        inv-x @ rightmost-inv @ 2 * + 31 =
        if
            move-down
        else
            inv-x @ 1+ inv-x !
        then
    else
        ( moving left...)
        inv-x @ leftmost-inv @ 2 * + 0=
        if
            move-down
        else
            inv-x @ 1- inv-x !
        then
    then
;

: disp-barricades
21 17 do
    4 0 do
        j i 3 + at [ 128 32 + ] literal emit
        j i 10 + at [ 128 32 + ] literal emit
        j i 18 + at [ 128 32 + ] literal emit
        j i 25 + at [ 128 32 + ] literal emit
    loop
loop
;

: init-invaders
    inv-start-y @ dup inv-y ! old-inv-y !
    0 inv-x ! 0 old-inv-x !
    1 inv-dir !
    inv-state
    inv-cols inv-rows * 0 do
        dup invader-alive swap c!
        1+
    loop
    drop
    disp-invaders call
    inv-y @ inv-rows + inv-rows + 17 < if
        disp-barricades
    then
    inv-rows inv-cols * invaders-left !
;

: .S
    15419 @ HERE 12 +
    ( top, bottom)
    OVER OVER -
    IF ( if stack not empty)
    DO
    I @ . 2
    +LOOP
    ELSE
    DROP DROP
    THEN
;

: init-bombs
    15403 c@ bomb-rel-idx c!
    0 last-dropper !
    max-bombs 0 do
        [ ship-y 2 + 256 * ] literal bombs i 2 * + !   
    loop
;

: move-bombs
    bombs 1+
    max-bombs 0 do
        dup c@ dup [ ship-y 2 + ] literal < if
            1+
            ( have we hit the player? )
            dup ship-y = if
                over 1- c@ 8 * 3 +
                ship-x @ dup 8 + between? if
                    1 ship-hit !
                then
            then

            over c!    
        else
            drop
        then
        2+ 
    loop
    drop
; 

: no-bombs-in-flight?
    1
    max-bombs 0 do
        bombs 1+ i + i + c@ [ ship-y 2 + ] literal < if
            drop 0
            leave
        then
    loop
;

: disp-lives
    6 1 do
        0 29 i - i - at
        i life @ < if
            player-gr emit player-gr 1+ emit
        else
            2 spaces
        then
    loop
;

: lose-life
    ship-y ship-x @ 8 / at ." **"
    life @ 1- life !
    disp-lives
    ( give the player a sporting chance, let all bombs descend before new life)
    begin
        move-bombs
        disp-bombs call
        10 pause call ( fixme: will figure out proper timing later)
        no-bombs-in-flight?
    until
    0 ship-hit !
    100 pause call
;


: game-loop
    0
    begin
        invaders-left @ 0= if
            no-bombs-in-flight? if
                inv-start-y @ 1+ inv-start-y !
                init-invaders
            then
        then
        disp-ship call
        dup
        inv-period @ mod 0= if disp-invaders call then
        disp-missile call
        disp-bombs call
        
        update-inv-stats call
        set-inv-period
        ship-hit @ if lose-life then
        ( keep going if we have lives left and no landing)
        life @ 0>
        inv-y @ bottommost-inv @ 2 * + ship-y <
        invaders-left @ 0= or
        and
    while
        1+
        move-missile
        move-ship
        dup
        inv-period @ mod 0= if move-invaders then
        dup bomb-period and 0= if move-bombs then
        dup bomb-rel-period and 0= if bombs-away call then
    repeat
    drop
;

: play
    124 ship-x !
    0 ship-hit !
    0 missile-y !
    init-inv-start-y inv-start-y !
    init-bombs
    create-udgs
    invis cls
    init-invaders
    4 life !
    disp-lives
    50 pause call
    life @ 1- life !
    disp-lives
    game-loop
    12 12 at ." GAME OVER" cr
    vis
;
